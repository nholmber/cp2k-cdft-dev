@SET RESTART_WFN              TRUE
@SET WFN_FILE                 HeH-noconstraint-1_0.wfn
@SET PROJECT_NAME             HeH-cdft-4
@SET WRITE_WFN                0
@SET CHARGE                   1
@SET WRITE_CUBE               FALSE
@SET CENTER_SYS               ON
@SET XYZFILE                  HeH.xyz

@SET HIRSHFELD_ACTIVE         TRUE
@SET HIRSHFELD_FRAGMENT       TRUE
@SET PRINT_WEIGHT_FUNCTION    TRUE
@SET MAX_SCF                  0
! He+ H
@SET HIRSHFELD_TARGET_1       0.0
@SET HIRSHFELD_STR_1          0.0
! He H+
@SET HIRSHFELD_TARGET_2       2.0
@SET HIRSHFELD_STR_2          0.0

@SET HIRSHFELD_SHAPEFN        GAUSSIAN
@SET GAUSSIAN_SHAPE           DEFAULT

&GLOBAL
  PROJECT ${PROJECT_NAME}
  RUN_TYPE ENERGY
  PRINT_LEVEL MEDIUM
&END GLOBAL

&FORCE_EVAL
  METHOD QS
  @SET HIRSHFELD_STR ${HIRSHFELD_STR_1}
  @SET HIRSHFELD_TARGET ${HIRSHFELD_TARGET_1}
  @include dft-common-params.inc
  @include subsys.inc
&END FORCE_EVAL
